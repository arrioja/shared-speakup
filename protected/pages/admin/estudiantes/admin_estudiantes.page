<%@ Title="Administrar estudiantes" %>
<com:TContent ID="cuerpo">
<br/>

<div  id="loading" style="display:none;     width: 90%;
     text-align: center;
    "
				><img ID='loading' src='imagenes/iconos/loadinfo.gif'>
			</div>
<div align="center">
<com:XActiveDataGrid
Caption="Administrar Estudiantes"
	ID="DataGrid"
	AllowPaging="false"
	Width="90%"
	PageSize="24"
	PagerStyle.Mode="Numeric"
	CellPadding="0"
	CellSpacing="0"
	GridLines="Both"
	DataKeyField="id"
	HeaderStyle.BackColor="#29166F"
	HeaderStyle.ForeColor="white"
	ItemStyle.BackColor="#BFCFFF"
    ItemStyle.BorderColor="white"
	AlternatingItemStyle.BackColor="#E6ECFF" 
	OnPageIndexChanged="changePage"
	OnPagerCreated="pagerCreated"
	AutoGenerateColumns="false"
    OnItemCreated="itemCreated"
    EmptyTemplate="<div style='font-size:14px;
                           color:#FF0000;
                           height:100px;
                           font-weight:bold;
                           vertical-align:middle;
                           padding-top:40px;'>
                <br>
                No existen datos suficientes para realizar el listado.</div>">


  >

          <prop:ClientSide
              OnLoading="Element.show('loading')"
              OnComplete="Element.hide('loading')"
            />

		<com:XActiveBoundColumn
		ID="cedula"
		HeaderText="CEDULA"
		DataField="cedula"
		HeaderStyle.Width="60px"
        ItemStyle.HorizontalAlign="Center"

		/>
		<com:XActiveBoundColumn
		ID="nombres"
		HeaderText="NOMBRES"
		DataField="nombres"
		HeaderStyle.Width="100px"
        ItemStyle.HorizontalAlign="Center"
		/>

		<com:XActiveBoundColumn
		ID="apellidos"
		HeaderText="APELLIDOS"
		HeaderStyle.Width="100px"
		DataField="apellidos"
		ItemStyle.HorizontalAlign="Center"

		/>
		<com:XActiveBoundColumn
		ID="programa"
		HeaderText="PROGRAMA"
		HeaderStyle.Width="50px"
		DataField="programa"
		ItemStyle.HorizontalAlign="Center"

		/>
        <com:XActiveBoundColumn
		ID="nivel"
		HeaderText="NIVEL"
		HeaderStyle.Width="50px"
		DataField="nivel_actual"
		ItemStyle.HorizontalAlign="Center"
        />
	<com:XActiveTemplateColumn
		ID="editar"
		HeaderText="EDITAR"
		HeaderStyle.Width="50px"
		ItemStyle.HorizontalAlign="Center"
        >
            <prop:ItemTemplate>
                <com:TLinkButton  CommandName="editar"  CommandParameter="<%#$this->Page->createMultiple($this, array('id'))%>" Text="<img src='imagenes/iconos/editar.png' border='0' />" ToolTip="EDITAR ESTUDIANTE"   OnClick="Page.editar"/>
			</prop:ItemTemplate>
		</com:XActiveTemplateColumn>

         <com:XActiveTemplateColumn
		ID="eliminar"
		HeaderText="Eliminar"
		ItemStyle.HorizontalAlign="Center"
		HeaderStyle.Width="50px"
		>
            <prop:ItemTemplate>
                <com:TLinkButton  CommandName="delete"  CommandParameter="<%#$this->Page->createMultiple($this, array('id'))%>" Text="<img src='imagenes/iconos/delete.png' border='0' />" ToolTip="ELIMINAR ESTUDIANTE"  OnClick="Page.eliminar" Attributes.onClick="if(!confirm('Â¿Est&aacute; Seguro de eliminar el Estudiante seleccionado?')) return false;" />
			</prop:ItemTemplate>
        </com:XActiveTemplateColumn>


</com:XActiveDataGrid>
</div>
<table Width="90%" aling="center" >
    <tr>
    <td aling="center">
        <div align="center"><com:TButton BorderWidth="0" ID="btn_volver"
                    Text="Regresar"
                    OnClick="regresar"
                    />
                    </div>
    </td>
    </tr>
    </table>

</com:TContent>